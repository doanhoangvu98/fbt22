<%= form_for Review.new do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :tour_id, value: @tour.id %>
  <%= f.hidden_field :user_id %>
    <div class="form-group">
     <%= f.label :type, t("reviews.form.type_review") %>
      <%= f.select :type_review, Review.type_reviews.keys, {}, {class: "form-control"} %>
    </div>
    <div class="form-group">
      <div id = "rating-form">
        <label><%= t("reviews.form.rating") %></label>
      </div>
    </div>
    <div class="form-group">
      <%= f.text_area :content, placeholder: t("reviews.form.input"), class: "form-control" %>
    </div>
  <%= f.submit t("reviews.form.submit"), class: "btn btn-primary" %>
<% end %>

<%= javascript_include_tag("review") %>
