<% provide(:title, t(".title")) %>
<div class="home-bg position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal"><%= t(".brand") %></h1>
        <p class="lead font-weight-normal"><%= t(".introduction") %></p>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-1 temp_col"></div>
    <div class="col-lg-11"></div>
    <div class="col-lg-12">
      <!-- Offers Grid -->
      <%= form_tag tours_path, :method => "get" do %>
      <%= text_field_tag :search, @search_term, class: "form-control"%>
      <%= submit_tag "Search", :title => nil %>
      <% end %>
      <div class="offers_grid">
        <!-- Offers Item -->
        <%= render @tours %>
        <%= will_paginate @tours %>
      </div>
    </div>
  </div>
</div>
