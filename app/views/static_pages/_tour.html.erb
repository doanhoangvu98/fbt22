<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <img class="card-img-top" src="<%= tour.image %>" alt="Card image cap">
    <div class="card-body">
      <h5><strong><%= tour.title %></strong></h5>
      <h5 class="price"><%= number_to_currency(tour.price) %></h5>
      <p class="card-text text-justify"><%= truncate(tour.description, length: Settings.app.tour.length) %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to t(".readmore"), tour, class: "btn btn-sm btn-info" %>
        </div>
        <small class="text-muted" >
          <div class="review-rating float-right" data-score="<%= tour.average_review %>"></div>
        </small>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag("review") %>
