<% provide(:title, t(".title")) %>
<h1 class="text-center"><%= t(".title") %></h1>
<div class="container">
  <div class="col-md-12">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: t(".email"),
          class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t(".minimum", count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: t(".newpwd"),
          class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: t("newpwd"),
          class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".submit"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
